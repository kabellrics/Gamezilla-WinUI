        <!--</controls:ConstrainedBox>-->
        <GridView Grid.Row="1" x:Name="gridview" SelectionMode="Single" Margin="0" IsTabStop="True" ItemsSource="{x:Bind ViewModel.Menus}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Button Tag="{Binding Text}" Background="Transparent"
                            IsTabStop="False" Padding="0"
                             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Command="{Binding Command}" CommandParameter="false">
                        <StackPanel Orientation="Vertical" Padding="0" Margin="0">
                                <FontIcon Glyph="{Binding IconPath}"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid x:Name="MaxItemsWrapGrid"
                           MaximumRowsOrColumns="10" SizeChanged="MaxItemsWrapGrid_SizeChanged"
                           Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
        <ListView Grid.Row="2" x:Name="itemListView" SelectionMode="Single" Margin="0"
                      ScrollViewer.HorizontalScrollMode="Enabled"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollMode="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                      ItemsSource="{x:Bind ViewModel.CurrentDisplayList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                    <ItemsStackPanel
                           Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--<Grid>-->
                            <controls:ConstrainedBox AspectRatio="2:3">
                                <Image Source="{Binding Cover}" Stretch="Fill"/>
                            </controls:ConstrainedBox>
                        <!--</Grid>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
