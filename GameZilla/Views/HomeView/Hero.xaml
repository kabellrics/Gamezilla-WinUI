    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/splash.jpg"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Tag="{x:Bind ViewModel.Menus[0].Text}" Background="Transparent"
                            IsTabStop="True" Padding="0" Margin="5 0" Grid.Column="0"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Command="{x:Bind ViewModel.Menus[0].Command}" CommandParameter="false">
                <StackPanel Orientation="Vertical" Padding="0" Margin="0">
                    <FontIcon Glyph="{x:Bind ViewModel.Menus[0].IconPath}"/>
                </StackPanel>
            </Button>
